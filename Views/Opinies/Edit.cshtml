@model GofromaniaWebApp.Models.Opinie

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>
<h4>Opinie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Ocena" class="control-label"></label>
                <input asp-for="Ocena" class="form-control" />
                <span asp-validation-for="Ocena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opinia" class="control-label"></label>
                <input asp-for="Opinia" class="form-control" />
                <span asp-validation-for="Opinia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Ip" class="form-control" hidden />
                <span asp-validation-for="Ip" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Aktwyne" /> @Html.DisplayNameFor(model => model.Aktwyne)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Admin" class="control-label"></label>
                <input asp-for="Admin" class="form-control" value="@ViewBag.userid" hidden />
                <span asp-validation-for="Admin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@ViewBag.userid

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
