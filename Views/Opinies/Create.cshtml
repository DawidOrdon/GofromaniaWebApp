@model GofromaniaWebApp.Models.Opinie

@{
    ViewData["Title"] = "Create";
}



<div class="row">
    
    <div class="col-md-4 text-center" style="margin:auto;">
        <h1>Podziel się swoją opinią</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ocena" class="control-label"></label>
                <input asp-for="Ocena" class="form-control" max="5" min="1" />
                <span asp-validation-for="Ocena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opinia" class="control-label"></label>
                <input asp-for="Opinia" class="form-control"/>
                <span asp-validation-for="Opinia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <input asp-for="Autor" class="form-control" />
                <span asp-validation-for="Autor" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Dodaj opinie" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 text-center">
        Twoja opinia będzie widoczna po zaakceptowaniu
    </div>
</div>
<div class="text-center">
    <a asp-action="ActiveOpinies">Powrót do strony głównej</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
